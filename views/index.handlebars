 <div class="col-md-10 col-12 mx-auto">
   <form action="/" method="POST">
    <div class="form-row justify-content-center">
      <select name="selectedMonth" class="form-control col-md-3 mr-3">
        <option value="all">全部月份</option>
        <option value="01" {{isSelected selectedMonth "01"}}>一月</option>
        <option value="02" {{isSelected selectedMonth "02"}}>二月</option>
        <option value="03" {{isSelected selectedMonth "03"}}>三月</option>
        <option value="04" {{isSelected selectedMonth "04"}}>四月</option>
        <option value="05" {{isSelected selectedMonth "05"}}>五月</option>
        <option value="06" {{isSelected selectedMonth "06"}}>六月</option>
        <option value="07" {{isSelected selectedMonth "07"}}>七月</option>
        <option value="08" {{isSelected selectedMonth "08"}}>八月</option>
        <option value="09" {{isSelected selectedMonth "09"}}>九月</option>
        <option value="10" {{isSelected selectedMonth "10"}}>十月</option>
        <option value="11" {{isSelected selectedMonth "11"}}>十一月</option>
        <option value="12" {{isSelected selectedMonth "12"}}>十二月</option>
      </select>

      <select name="selectedCategory" class="form-control col-md-3 mr-3">
        <option value="all">全部類別</option>
        {{#each categories}}
          <option value="{{this.category}}" {{isSelected ../selectedCategory this.category}}>{{this.category}}</option>
        {{/each}}
      </select>

      <button class="btn btn-primary">篩選</button>
   </form>

  </div>

  <div class="panel d-flex flex-column justify-content-center">
    <span class="panel-title mt-3">總金額</span>
    <p class="panel-amount">{{totalAmount}}</p>
  </div>

  <div class="d-flex justify-content-center">
   <a href="/records/new" class="btn btn-warning btn-lg mb-3 col-sm-6 ">新增一筆支出</a>
  </div>

  <ul class="list-group  mx-auto">
    {{#each records}}

    <li class="list-group-item col-sm-6 mx-auto">
      <div class="row d-flex align-items-center">
        <div class="col-sm-2">
          <i class="{{this.icon}} h1 mx-3"></i>
        </div>

        <div class="col-sm-4 mr-auto">
          <h4>{{this.name}}</h4>
          <h4>{{this.formattedDate}}</h4>
        </div>

        <div class="col-sm-2 mr-auto">
          <h4>{{this.amount}}</h4>
        </div>

        <div class="col-sm-4 mx-auto">
          <a href="/records/{{{this.id}}}/edit" class="btn btn-success">編輯</a>
          <form action="/records/{{{this.id}}}/delete?_method=DELETE" method="POST" style="display: inline;">
            <button type="submit" class="btn btn-danger">刪除</button>
          </form>
        </div>
      </div>
    </li>
    {{/each}}

  </ul>
  {{#ifEquals records.length 0}}
  <div class="d-flex justify-content-center mt-5">
    <i class="fas fa-money-bill-alt h3 pr-3" style="color:rgb(88, 83, 83);"></i>
    <p class="h3" style="color:rgb(88, 83, 83);">尚未有任何消費</p>
  </div>
  {{/ifEquals}}

 </div>

