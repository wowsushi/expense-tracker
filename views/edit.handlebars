<form action="?_method=PUT" method="POST">
  <div class="container">
    <div class="row">
      <div class="col-12 col-md-10 mx-auto">
        <div class="form-group row text-secondary">
          <div class="col-sm-2 col-form-label font-weight-bold">* 必填項目</div>
          <div class="col-sm-10 h1 text-center">請修改你的支出</div>
        </div>

        <div class="form-group row text-secondary">
          <label for="name" class="col-sm-2 col-form-label">
            名稱 *</label>
          <div class="col-sm-10">
            <input type="text" class="form-control" placeholder="請輸入消費名稱" name="name" value="{{record.name}}" required>
          </div>
        </div>
        
        <div class="form-group row text-secondary">
          <label for="date" class="col-sm-2 col-form-label">
            日期 *</label>
           <div class="col-sm-10">
            <input type="date" id="date" class="form-control" placeholder="請輸入名稱" name="date" value="{{formattedDate}}" required>
          </div>
        </div>

        <div class="form-group row text-secondary">
          <label for="category" class="col-sm-2 col-form-label">
            類別 *</label>
          <div class="col-sm-10">
            <select name="category" class="form-control">
              {{#each categories}}
                <option value="{{this.category}}" {{isSelected this.category ../record.category}}>{{this.category}}</option>
              {{/each}}
            </select>
          </div>
        </div>

        <div class="form-group row text-secondary">
          <label for="amount" class="col-sm-2 col-form-label">
            金額 *</label>
          <div class="col-sm-10">
            <input type="number" class="form-control" placeholder="請輸入花費金額" name="amount" value="{{record.amount}}" required>
          </div>
        </div>      
      </div>
    </div>
  </div>
  <div class="form-group row d-flex justify-content-center m-3">
    <a href="/" class="btn btn-info mr-3" role="button">返回</a>
    <button type="submit" class="btn btn-warning">完成修改</button>
  </div>
</form>