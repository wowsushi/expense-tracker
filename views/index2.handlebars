 <div class="col-md-10 col-12 mx-auto">
  <div class="form-row justify-content-center">
    <select class="form-control col-md-3 mr-3">
      <option value="all" selected>全部月份</option>
      <option value="jan">一月</option>
      <option value="feb">二月</option>
      <option value="mar">三月</option>
      <option value="apr">四月</option>
      <option value="may">五月</option>
      <option value="jun">六月</option>
      <option value="july">七月</option>
      <option value="aug">八月</option>
      <option value="sep">九月</option>
      <option value="oct">十月</option>
      <option value="nov">十一月</option>
      <option value="dec">十二月</option>
    </select>

    <select name="months" class="form-control col-md-3 mr-3">
      <option value="all" selected>全部類別</option>
      {{#each categories}}
        <option value="{{this.category}}">{{this.category}}</option>
      {{/each}}
    </select>

  </div>

  <div class="panel d-flex flex-column justify-content-center">
    <span class="panel-title mt-3">總金額</span>
    <p class="panel-amount">123445</p>
  </div>

  <div class="d-flex justify-content-center">
   <a href="/records/new" class="btn btn-warning btn-lg mb-3 col-sm-6 ">新增一筆支出</a>
  </div>

  <ul class="list-group  mx-auto">
    {{#each records}}

    <li class="list-group-item col-sm-6 mx-auto">
      <div class="row d-flex align-items-center">
        <div class="col-sm-2">
          <i class="{{this.icon}} h1 mx-3"></i>
        </div>

        <div class="col-sm-4 mr-auto">
          <h4>{{this.name}}</h4>
          <h4>{{this.formattedDate}}</h4>
        </div>

        <div class="col-sm-2 mr-auto">
          <h4>{{this.amount}}</h4>
        </div>

        <div class="col-sm-4 mx-auto">
          <a href="/records/{{{this.id}}}/edit" class="btn btn-success">編輯</a>
          <form action="/records/{{{this.id}}}/delete?_method=DELETE" method="POST" style="display: inline;">
            <button type="submit" class="btn btn-danger">刪除</button>
          </form>
        </div>
      </div>
    </li>
    {{/each}}
  </ul>

 </div>

